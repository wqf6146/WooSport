<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:id="@+id/ll_history_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#F6F6F8"
        >
        <LinearLayout 
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:gravity="center"
            >
        <ImageView 
            android:id="@+id/img_back"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back2"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="18dp"
            android:text="我的"
            android:textColor="#93D7F6"
            />
        </LinearLayout>
         <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="历史记录"
            android:textSize="18dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            />
      </RelativeLayout>
      <RelativeLayout 
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >
    <LinearLayout 
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#555555"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <TextView 
                android:id="@+id/tv_history_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⇦"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                />
            <TextView 
                android:id="@+id/tv_histort_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-07"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:layout_marginLeft="20dp"
                />
             <TextView 
                android:id="@+id/tv_history_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⇨"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_marginTop="20dp"
            >
             <ImageView 
                 android:id="@+id/img_1"
                 android:layout_width="20dp"
                 android:layout_height="20dp"
                 android:background="@drawable/historyjilu"
                 android:layout_centerVertical="true"
                 />
             <TextView 
                 android:id="@+id/tv_1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="#FFFFFF"
                 android:text="运动次数"
                 android:layout_toRightOf="@+id/img_1"
                 android:layout_centerVertical="true"
                 android:layout_marginLeft="5dp"
                 />
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="#FFFFFF"
                 android:text="次"
                 android:layout_alignParentRight="true"
                 android:layout_marginRight="20dp"
                 android:layout_centerVertical="true"
                 />
             <TextView 
                 android:id="@+id/tv_history_cishu"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="0"
                 android:textSize="18dp"
                 android:textColor="#FFFFFF"
                 android:layout_centerInParent="true"
                 />
             <View 
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:layout_below="@+id/tv_history_cishu"
                 android:background="#FFFFFF"
                 android:layout_marginTop="10dp"
                 android:layout_toRightOf="@+id/img_1"
                 android:layout_marginRight="10dp"
                 android:layout_marginLeft="5dp"
                 />
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_marginTop="20dp"
            >
             <ImageView 
                 android:id="@+id/img_2"
                 android:layout_width="20dp"
                 android:layout_height="20dp"
                 android:background="@drawable/historytime"
                 android:layout_centerVertical="true"
                 />
             <TextView 
                 android:id="@+id/tv_2"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="#FFFFFF"
                 android:text="运动时长"
                 android:layout_toRightOf="@+id/img_2"
                 android:layout_centerVertical="true"
                 android:layout_marginLeft="5dp"
                 />
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="#FFFFFF"
                 android:text="秒"
                 android:layout_alignParentRight="true"
                 android:layout_marginRight="20dp"
                 android:layout_centerVertical="true"
                 />
             <TextView 
                 android:id="@+id/tv_history_time"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="0"
                 android:textSize="18dp"
                 android:textColor="#FFFFFF"
                 android:layout_centerInParent="true"
                 />
             <View 
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:layout_below="@+id/tv_history_time"
                 android:background="#FFFFFF"
                 android:layout_marginTop="10dp"
                 android:layout_toRightOf="@+id/img_2"
                 android:layout_marginRight="10dp"
                 android:layout_marginLeft="5dp"
                 />
        </RelativeLayout>
         <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_marginTop="20dp"
            >
             <ImageView 
                 android:id="@+id/img_3"
                 android:layout_width="20dp"
                 android:layout_height="20dp"
                 android:background="@drawable/historyjuli"
                 android:layout_centerVertical="true"
                 />
             <TextView 
                 android:id="@+id/tv_3"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="#FFFFFF"
                 android:text="运动距离"
                 android:layout_toRightOf="@+id/img_3"
                 android:layout_centerVertical="true"
                 android:layout_marginLeft="5dp"
                 />
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="#FFFFFF"
                 android:text="米"
                 android:layout_alignParentRight="true"
                 android:layout_marginRight="20dp"
                 android:layout_centerVertical="true"
                 />
             <TextView 
                 android:id="@+id/tv_history_juli"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="0"
                 android:textSize="18dp"
                 android:textColor="#FFFFFF"
                 android:layout_centerInParent="true"
                 />
             <View 
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:layout_below="@+id/tv_history_juli"
                 android:background="#FFFFFF"
                 android:layout_marginTop="10dp"
                 android:layout_toRightOf="@+id/img_3"
                 android:layout_marginRight="10dp"
                 android:layout_marginLeft="5dp"
                 />
        </RelativeLayout>
         <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_marginTop="20dp"
            android:paddingBottom="10dp"
            >
             <ImageView 
                 android:id="@+id/img_4"
                 android:layout_width="20dp"
                 android:layout_height="20dp"
                 android:background="@drawable/historyreliang"
                 android:layout_centerVertical="true"
                 />
             <TextView 
                 android:id="@+id/tv_4"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="#FFFFFF"
                 android:text="燃烧热量"
                 android:layout_toRightOf="@+id/img_4"
                 android:layout_centerVertical="true"
                 android:layout_marginLeft="5dp"
                 />
             <TextView 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="#FFFFFF"
                 android:text="千卡"
                 android:layout_alignParentRight="true"
                 android:layout_marginRight="20dp"
                 android:layout_centerVertical="true"
                 />
             <TextView 
                 android:id="@+id/tv_history_reliang"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="0"
                 android:textSize="18dp"
                 android:textColor="#FFFFFF"
                 android:layout_centerInParent="true"
                 />
             <View 
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:layout_below="@+id/tv_history_reliang"
                 android:background="#FFFFFF"
                 android:layout_marginTop="10dp"
                 android:layout_toRightOf="@+id/img_4"
                 android:layout_marginRight="10dp"
                 android:layout_marginLeft="5dp"
                 />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/ll_1"
        >
        <View 
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:background="#555555"
        />
    </LinearLayout>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/tv_yuan_white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="运动信息记录表"
        android:textSize="18dp" 
        android:layout_below="@+id/ll_1"
        />
    </RelativeLayout>
    <ListView 
        android:id="@+id/lv_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        ></ListView>
</LinearLayout>
