<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:keepScreenOn="true"
     >
    
    <LinearLayout 
        android:id="@+id/ll_jbx_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        >
        <ImageView 
            android:layout_height="18dp"
            android:layout_width="18dp"
            android:background="@drawable/back2"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首页"
            android:textColor="#7FCFF4"
            android:textSize="18dp"
            />
        
    </LinearLayout>
   
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
    <TextView 
        android:id="@+id/tab_sports"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/lin_left_red"
        android:layout_weight="1"
        android:text="健康行"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        />
     <TextView 
         android:id="@+id/tab_activity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_bk_white"
        android:layout_weight="1"
        android:text="活动"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="18dp"
        android:textColor="#B3B3B3"
        />
      <TextView 
          android:id="@+id/tab_ranklist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/lin_right_white"
        android:layout_weight="1"
        android:text="排行榜"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="18dp"
        android:textColor="#B3B3B3"
        />
    </LinearLayout>
     <LinearLayout
        android:id="@+id/fj_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
    </LinearLayout>
</LinearLayout>
