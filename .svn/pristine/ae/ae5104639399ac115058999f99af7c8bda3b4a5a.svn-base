<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graybg"
    android:orientation="vertical" >

   <ScrollView 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="5dp"
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:paddingTop="10dp"
           android:paddingBottom="10dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:gravity="center_vertical">

               <View
                   android:layout_width="match_parent"
                   android:layout_height="0.1dp"
                   android:background="@color/grayline"/>

               <RelativeLayout
                   android:id="@+id/rl_myf_myxx"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:background="#FFFFFF"
                   android:paddingLeft="10dp"
                   android:paddingTop="5dp"
                   android:paddingBottom="5dp"
                   android:paddingRight="5dp"
                   >
                   <ImageView
                       android:id="@+id/img_myf_tx"
                       android:layout_width="80dp"
                       android:layout_height="80dp"
                       android:src="@drawable/ic_launcher"
                       />
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:layout_marginLeft="5dp"
                       android:layout_toRightOf="@+id/img_myf_tx"
                       android:layout_toLeftOf="@+id/img_myf_back"
                       >
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:id="@+id/tv_myf_name"
                           android:text="运动公民"
                           android:textSize="18dp"
                           android:textColor="#000000"
                           />
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal"
                           android:layout_marginTop="10dp"
                           >
                           <View
                               android:id="@+id/view_jifen"
                               android:layout_width="0dp"
                               android:layout_height="5dp"
                               android:background="#FF0000"
                               android:layout_weight="2"
                               />
                           <View
                               android:id="@+id/view_jifen2"
                               android:layout_width="0dp"
                               android:layout_height="5dp"
                               android:background="#CCCCCC"
                               android:layout_weight="7"
                               />
                       </LinearLayout>

                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="10dp"
                           >
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="LV1"
                               android:textColor="#FF0000"
                               android:id="@+id/tv_myf_lv"
                               />
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="LV2"
                               android:textColor="#FF0000"
                               android:id="@+id/tv_myf_lv1"
                               android:layout_alignParentRight="true"
                               />
                       </RelativeLayout>

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal"
                           android:gravity="center"
                           >
                           <!--     <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="成就"
                                   android:textColor="#999999"
                                   />
                               <TextView
                                   android:id="@+id/tv_myf_cj"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="3"
                                   android:textColor="#FF0000"
                                   android:layout_marginLeft="5dp"
                                   />
                                    -->
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="积分"
                               android:textColor="#999999"
                               android:layout_marginLeft="20dp"
                               />
                           <TextView
                               android:id="@+id/tv_myf_jf"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="30"
                               android:textColor="#FF0000"
                               android:layout_marginLeft="5dp"
                               />
                       </LinearLayout>
                   </LinearLayout>

                   <ImageView
                       android:layout_width="15dp"
                       android:layout_height="13dp"
                       android:background="@drawable/backright"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"
                       android:id="@+id/img_myf_back"
                       android:layout_marginRight="10dp"
                       android:layout_marginLeft="10dp"
                       />
               </RelativeLayout>

               <View
                   android:layout_width="match_parent"
                   android:layout_height="0.1dp"
                   android:background="@color/grayline"/>
           </LinearLayout>

       <View
           android:layout_width="match_parent"
           android:layout_height="0.1dp"
           android:layout_marginTop="10dp"
           android:background="@color/grayline"/>
         <RelativeLayout
             android:id="@+id/ll_myf_ls"
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:background="@color/white"
             android:paddingLeft="10dp"

             >
             <ImageView
                 android:id="@+id/img_my_lishi"
                 android:layout_width="25dp"
                 android:layout_height="25dp"
                 android:scaleType="centerCrop"
                 android:background="@drawable/lishi"
                 android:layout_centerVertical="true" />
             <TextView
                 android:id="@+id/tv_ls"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="历史"
                 android:layout_centerVertical="true"
                 android:layout_toRightOf="@+id/img_my_lishi"
                 android:textSize="16dp"
                 android:layout_marginLeft="5dp"
                 android:textColor="#000000"
                 />
             <TextView
                 android:id="@+id/tv_myf_ls"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="查看运动的历史"
                 android:layout_marginLeft="10dp"
                 android:layout_toRightOf="@+id/tv_ls"
                 android:layout_centerVertical="true"
                 android:textColor="#CCCCCC"
                 />
             <ImageView
                 android:layout_width="15dp"
                 android:layout_height="13dp"
                 android:background="@drawable/backright"
                 android:layout_marginRight="10dp"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 />
         </RelativeLayout>
         <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/viewc"
            android:layout_marginLeft="30dp"
            />
         <RelativeLayout 
             android:id="@+id/ll_myf_jl"
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:background="@color/white"
             android:paddingLeft="10dp"
             android:layout_below="@+id/view_3"
             >
             <ImageView 
                 android:id="@+id/img_my_jilu"
                 android:layout_width="25dp"
                 android:layout_height="25dp"
                 android:scaleType="centerCrop"
                 android:background="@drawable/jilu"
                 android:layout_centerVertical="true" />
             <TextView 
                 android:id="@+id/tv_jl"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="记录"
                 android:layout_centerVertical="true"
                 android:textSize="16dp"
                 android:layout_marginLeft="5dp"
                 android:layout_toRightOf="@+id/img_my_jilu"
                 android:textColor="#000000"
                 />
             <TextView 
                 android:id="@+id/tv_myf_jl"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="打破记录永无止境"
                 android:layout_marginLeft="10dp"
                 android:layout_toRightOf="@+id/tv_jl"
                 android:layout_centerVertical="true"
                 android:textColor="#CCCCCC"
                 />
             <ImageView 
                 android:layout_width="15dp"
                 android:layout_height="13dp"
                 android:background="@drawable/backright"
                 android:layout_marginRight="10dp"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 />
         </RelativeLayout>
         <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/viewc"
            android:layout_marginLeft="30dp"
            />
         <RelativeLayout 
             android:id="@+id/ll_myf_jz"
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:paddingLeft="10dp"
             android:background="@color/white"
             >
             <ImageView 
                 android:id="@+id/img_my_jiangzhang"
                 android:layout_width="25dp"
                 android:layout_height="25dp"
                 android:scaleType="centerCrop"
                 android:background="@drawable/jiangzhang"
                 android:layout_centerVertical="true" />
             <TextView 
                 android:id="@+id/tv_jz"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="奖章"
                 android:layout_centerVertical="true"
                 android:textSize="16dp"
                 android:layout_marginLeft="5dp"
                 android:layout_toRightOf="@+id/img_my_jiangzhang"
                 android:textColor="#000000"
                 />
             <TextView 
                 android:id="@+id/tv_myf_jz"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="已获得奖章数"
                 android:layout_marginLeft="10dp"
                 android:layout_toRightOf="@+id/tv_jz"
                 android:layout_centerVertical="true"
                 android:textColor="#CCCCCC"
                 />
             <ImageView 
                 android:layout_width="15dp"
                 android:layout_height="13dp"
                 android:background="@drawable/backright"
                 android:layout_marginRight="10dp"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 />
         </RelativeLayout>

       <View
           android:layout_width="match_parent"
           android:layout_height="0.1dp"
           android:background="@color/grayline"/>

       <View
           android:layout_width="match_parent"
           android:layout_height="0.1dp"
           android:layout_marginTop="10dp"
           android:background="@color/grayline"/>

       <RelativeLayout
           android:id="@+id/ll_myf_sz"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:background="@color/white"
           android:paddingLeft="10dp"
           android:layout_below="@+id/view_5"
           >
             <ImageView 
                 android:id="@+id/img_my_shezhi"
                 android:layout_width="25dp"
                 android:layout_height="25dp"
                 android:scaleType="centerCrop"
                 android:background="@drawable/shezhi"
                 android:layout_centerVertical="true"
                 />
             <TextView 
                 android:id="@+id/tv_sz"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="设置"
                 android:textSize="16dp"
                 android:layout_marginLeft="5dp"
                 android:layout_centerVertical="true"
                 android:layout_toRightOf="@+id/img_my_shezhi"
                 android:textColor="#000000"
                 />
             <TextView 
                 android:id="@+id/tv_myf_sz"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="10dp"
                 android:layout_toRightOf="@+id/tv_sz"
                 android:layout_centerVertical="true"
                 android:textColor="#CCCCCC"
                 />
             <ImageView 
                 android:layout_width="15dp"
                 android:layout_height="13dp"
                 android:background="@drawable/backright"
                 android:layout_marginRight="10dp"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 />
         </RelativeLayout>
       <View
           android:layout_width="match_parent"
           android:layout_height="0.1dp"
           android:background="@color/grayline"/>
    </LinearLayout>
</ScrollView>

</LinearLayout>
