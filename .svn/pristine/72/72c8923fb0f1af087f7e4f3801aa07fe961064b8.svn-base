<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    android:orientation="vertical">

    <!--<include layout="@layout/view_toolbar"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backleft"
            android:scaleType="fitCenter"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2016/10/10"
            android:textColor="#ffffff"
            />

        <View
            android:layout_width="48dp"
            android:layout_height="0dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="日"
            android:textColor="#ffffff"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="一"
            android:textColor="#ffffff"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="二"
            android:textColor="#ffffff"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="三"
            android:textColor="#ffffff"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="四"
            android:textColor="#ffffff"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="五"
            android:textColor="#ffffff"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="六"
            android:textColor="#ffffff"
            />

    </LinearLayout>



    <com.yhrjkf.woyundong.CalendarModule.CalendarLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <com.yhrjkf.woyundong.CalendarModule.CalendarDateView
            android:id="@+id/calendarDateView"
            android:layout_width="match_parent"
            app:cbd_calendar_row="5"
            android:layout_height="wrap_content"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:orientation="vertical"
                       android:background="#665e62"
                       android:layout_height="wrap_content">
                       <RelativeLayout
                           android:paddingTop="20dp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:paddingLeft="20dp"
                           android:layout_marginTop="1dp"
                           android:paddingBottom="10dp"
                           >
                           <ImageView
                               android:id="@+id/img_1"
                               android:layout_width="20dp"
                               android:layout_height="20dp"
                               android:background="@drawable/historyjilu"
                               android:layout_centerVertical="true"
                               android:paddingBottom="10dp"
                               />
                           <TextView
                               android:id="@+id/tv_1"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textColor="#FFFFFF"
                               android:text="运动次数"
                               android:layout_toRightOf="@+id/img_1"
                               android:layout_centerVertical="true"
                               android:layout_marginLeft="5dp"
                               />
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textColor="#FFFFFF"
                               android:text="次"
                               android:layout_alignParentRight="true"
                               android:layout_marginRight="20dp"
                               android:layout_centerVertical="true"
                               />
                           <TextView
                               android:id="@+id/tv_history_cishu"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="0"
                               android:textSize="18dp"
                               android:textColor="#FFFFFF"
                               android:layout_centerInParent="true"
                               />
                           <View
                               android:layout_width="match_parent"
                               android:layout_height="1dp"
                               android:layout_below="@+id/tv_history_cishu"
                               android:background="#FFFFFF"
                               android:layout_marginTop="10dp"
                               android:layout_toRightOf="@+id/img_1"
                               android:layout_marginRight="10dp"
                               android:layout_marginLeft="5dp"
                               />
                       </RelativeLayout>

                       <RelativeLayout
                           android:paddingTop="20dp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:paddingLeft="20dp"
                           android:paddingBottom="10dp"
                           >
                           <ImageView
                               android:id="@+id/img_2"
                               android:layout_width="20dp"
                               android:layout_height="20dp"
                               android:background="@drawable/historytime"
                               android:layout_centerVertical="true"
                               />
                           <TextView
                               android:id="@+id/tv_2"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textColor="#FFFFFF"
                               android:text="运动时长"
                               android:layout_toRightOf="@+id/img_2"
                               android:layout_centerVertical="true"
                               android:layout_marginLeft="5dp"
                               />
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textColor="#FFFFFF"
                               android:text="小时"
                               android:layout_alignParentRight="true"
                               android:layout_marginRight="20dp"
                               android:layout_centerVertical="true"
                               />
                           <TextView
                               android:id="@+id/tv_history_time"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="0"
                               android:textSize="18dp"
                               android:textColor="#FFFFFF"
                               android:layout_centerInParent="true"
                               />
                           <View
                               android:layout_width="match_parent"
                               android:layout_height="1dp"
                               android:layout_below="@+id/tv_history_time"
                               android:background="#FFFFFF"
                               android:layout_marginTop="10dp"
                               android:layout_toRightOf="@+id/img_2"
                               android:layout_marginRight="10dp"
                               android:layout_marginLeft="5dp"
                               />
                       </RelativeLayout>
                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:paddingLeft="20dp"
                           android:paddingTop="20dp"
                           android:paddingBottom="10dp"
                           >
                           <ImageView
                               android:id="@+id/img_3"
                               android:layout_width="20dp"
                               android:layout_height="20dp"
                               android:background="@drawable/historyjuli"
                               android:layout_centerVertical="true"
                               />
                           <TextView
                               android:id="@+id/tv_3"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textColor="#FFFFFF"
                               android:text="运动距离"
                               android:layout_toRightOf="@+id/img_3"
                               android:layout_centerVertical="true"
                               android:layout_marginLeft="5dp"
                               />
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textColor="#FFFFFF"
                               android:text="千米"
                               android:layout_alignParentRight="true"
                               android:layout_marginRight="20dp"
                               android:layout_centerVertical="true"
                               />
                           <TextView
                               android:id="@+id/tv_history_juli"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="0"
                               android:textSize="18dp"
                               android:textColor="#FFFFFF"
                               android:layout_centerInParent="true"
                               />
                           <View
                               android:layout_width="match_parent"
                               android:layout_height="1dp"
                               android:layout_below="@+id/tv_history_juli"
                               android:background="#FFFFFF"
                               android:layout_marginTop="10dp"
                               android:layout_toRightOf="@+id/img_3"
                               android:layout_marginRight="10dp"
                               android:layout_marginLeft="5dp"
                               />
                       </RelativeLayout>
                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:paddingLeft="20dp"
                           android:paddingTop="20dp"
                           android:paddingBottom="10dp"
                           >
                           <ImageView
                               android:id="@+id/img_4"
                               android:layout_width="20dp"
                               android:layout_height="20dp"
                               android:background="@drawable/historyreliang"
                               android:layout_centerVertical="true"
                               />
                           <TextView
                               android:id="@+id/tv_4"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textColor="#FFFFFF"
                               android:text="燃烧热量"
                               android:layout_toRightOf="@+id/img_4"
                               android:layout_centerVertical="true"
                               android:layout_marginLeft="5dp"
                               />
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textColor="#FFFFFF"
                               android:text="千卡"
                               android:layout_alignParentRight="true"
                               android:layout_marginRight="20dp"
                               android:layout_centerVertical="true"
                               />
                           <TextView
                               android:id="@+id/tv_history_reliang"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="0"
                               android:textSize="18dp"
                               android:textColor="#FFFFFF"
                               android:layout_centerInParent="true"
                               />
                           <View
                               android:layout_width="match_parent"
                               android:layout_height="1dp"
                               android:layout_below="@+id/tv_history_reliang"
                               android:background="#FFFFFF"
                               android:layout_marginTop="10dp"
                               android:layout_toRightOf="@+id/img_4"
                               android:layout_marginRight="10dp"
                               android:layout_marginLeft="5dp"
                               />
                       </RelativeLayout>
                   </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="月度运动统计表"
                        android:gravity="center"
                        android:textSize="17dp"
                        android:textColor="#D4D4D4"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        />

                    <lecho.lib.hellocharts.view.LineChartView
                        android:layout_marginTop="10dp"
                        android:id="@+id/line_chart"
                        android:layout_width="fill_parent"
                        android:layout_height="200dp"
                        android:background="#ffffff"
                        android:paddingLeft="10dp"
                        android:paddingRight="5dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        />
                </LinearLayout>
            </ScrollView>

    </com.yhrjkf.woyundong.CalendarModule.CalendarLayout>


</LinearLayout>
