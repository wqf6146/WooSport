<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    android:orientation="vertical">

    <!--<include layout="@layout/view_toolbar"/>-->
    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/main_YYMM_Tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/white"
                android:background="@color/tabIndicatorColor"
                android:text="----年-月" />

            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1px"-->
                <!--android:background="#ccc" />-->

            <sun.bob.mcalendarview.views.WeekColumnView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingTop="12dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ccc" />

            <sun.bob.mcalendarview.views.ExpCalendarView
                android:id="@+id/calendar_exp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".MainActivity" />

            <ImageView
                android:id="@+id/main_expandIV"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/top" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ccc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:paddingTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="1dp"
                    android:paddingBottom="10dp"
                    >
                    <ImageView
                        android:id="@+id/img_1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/historyjilu"
                        android:layout_centerVertical="true"
                        android:paddingBottom="10dp"
                        />
                    <TextView
                        android:id="@+id/tv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:text="运动次数"
                        android:layout_toRightOf="@+id/img_1"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:text="次"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/tv_history_cishu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="18dp"
                        android:textColor="@color/gray"
                        android:layout_centerInParent="true"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tv_history_cishu"
                        android:background="#ccc"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/img_1"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="5dp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:paddingTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingBottom="10dp"
                    >
                    <ImageView
                        android:id="@+id/img_2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/historytime"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/tv_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:text="运动时长"
                        android:layout_toRightOf="@+id/img_2"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:text="小时"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/tv_history_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="18dp"
                        android:textColor="@color/gray"
                        android:layout_centerInParent="true"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tv_history_time"
                        android:background="#ccc"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/img_2"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="5dp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp"
                    >
                    <ImageView
                        android:id="@+id/img_3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/historyjuli"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/tv_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:text="运动距离"
                        android:layout_toRightOf="@+id/img_3"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:text="千米"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/tv_history_juli"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="18dp"
                        android:textColor="@color/gray"
                        android:layout_centerInParent="true"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tv_history_juli"
                        android:background="#ccc"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/img_3"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="5dp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp"
                    >
                    <ImageView
                        android:id="@+id/img_4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/historyreliang"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/tv_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:text="燃烧热量"
                        android:layout_toRightOf="@+id/img_4"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:text="千卡"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/tv_history_reliang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="18dp"
                        android:textColor="@color/gray"
                        android:layout_centerInParent="true"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tv_history_reliang"
                        android:background="#ccc"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/img_4"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="5dp"
                        />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ccc" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="月度运动统计表"
                android:gravity="center"
                android:textSize="17dp"
                android:textColor="@color/gray"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                />

            <lecho.lib.hellocharts.view.LineChartView
                android:layout_marginTop="10dp"
                android:id="@+id/line_chart"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                />
        </LinearLayout>
    <!--</ScrollView>-->
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
