<?xml version="1.0" encoding="utf-8"?>
<com.yhrjkf.woyundong.view.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/fr_rl_topbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="7%"
        android:background="@color/bluefont">
        <ImageView
            android:layout_width="15dp"
            android:src="@drawable/leftarrow"
            android:layout_centerVertical="true"
            android:id="@+id/fr_img_back"
            android:layout_marginLeft="10dp"
            android:layout_height="15dp" />
        <TextView
            android:id="@+id/fr_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:text="排行榜"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>
    <android.support.percent.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="11%"
        android:background="@color/bluefont">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="65%"
            app:layout_heightPercent="60%"
            android:layout_centerHorizontal="true"
            android:id="@+id/fr_ll_classilytab">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:textColor="@color/bluefont"
                android:text="全部"
                android:textSize="16sp"
                android:background="@drawable/rank_btn_style"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="健走"
                android:background="@null"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:text="骑行"
                android:textSize="16sp"
                android:background="@null"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="100%"
            app:layout_heightPercent="53%"
            android:orientation="vertical"
            android:background="@color/white"
            app:layout_marginTopPercent="47%">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_height="0dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="天"
                    android:gravity="center"
                    android:textColor="@color/grayfont"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="周"
                    android:gravity="center"
                    android:textColor="@color/grayfont"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="月"
                    android:gravity="center"
                    android:textColor="@color/grayfont"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="总"
                    android:gravity="center"
                    android:textColor="@color/grayfont"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <com.yhrjkf.woyundong.view.PercentLinearLayout
                android:layout_width="match_parent"

                android:orientation="horizontal"
                android:layout_marginBottom="1dp"
                android:layout_height="1dp">
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@color/bluefont"
                    app:layout_marginLeftPercent="7%"
                    app:layout_marginRightPercent="7%"
                    android:layout_height="match_parent"/>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@color/bluefont"
                    app:layout_marginLeftPercent="7%"
                    app:layout_marginRightPercent="7%"
                    android:layout_height="match_parent"/>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@color/bluefont"
                    app:layout_marginLeftPercent="7%"
                    app:layout_marginRightPercent="7%"
                    android:layout_height="match_parent"/>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@color/bluefont"
                    app:layout_marginLeftPercent="7%"
                    app:layout_marginRightPercent="7%"
                    android:layout_height="match_parent"/>
            </com.yhrjkf.woyundong.view.PercentLinearLayout>
        </LinearLayout>
    </android.support.percent.PercentRelativeLayout>


<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#555555"
    >
    <TextView 
        android:id="@+id/tv_ranking_alls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#000000"
        android:text="全部"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="16dp"
        />
    <TextView 
        android:id="@+id/tv_ranking_jianzou"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#FFFFFF"
        android:text="健走"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="16dp"
        />
    <TextView 
        android:id="@+id/tv_ranking_qixing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#FFFFFF"
        android:text="骑行"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="16dp"
        />
    
</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#999999"
    android:orientation="horizontal"
    >
     <TextView 
        android:id="@+id/tv_ranking_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:layout_weight="1"
        android:text="天"
        android:textColor="#000000"
        />
     <TextView 
        android:id="@+id/tv_ranking_week"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:layout_weight="1"
        android:text="周"
        android:textColor="#FFFFFF"
        />
     <TextView 
        android:id="@+id/tv_ranking_month"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:layout_weight="1"
        android:text="月"
        android:textColor="#FFFFFF"
        />
      <TextView 
        android:id="@+id/tv_ranking_quarter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:layout_weight="1"
        android:text="季度"
        android:textColor="#FFFFFF"
        />
      <TextView 
        android:id="@+id/tv_ranking_halfyear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:layout_weight="1"
        android:text="半年"
        android:textColor="#FFFFFF"
        />
      <TextView 
        android:id="@+id/tv_ranking_year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:layout_weight="1"
        android:text="年"
        android:textColor="#FFFFFF"
        />
</LinearLayout>
<ListView 
    android:id="@+id/lv_ranking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    ></ListView>

</com.yhrjkf.woyundong.view.PercentLinearLayout>
