<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical" >

 <ImageView 
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/biaoti"
        />
   <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:gravity="center"
            android:background="@drawable/textview_yuan_left"
            android:textSize="16dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#000000"
            />
        <EditText 
            android:id="@+id/ed_login_sjh"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_yuan_right"
            android:hint="请输入手机号"
            android:layout_marginLeft="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            />
    </LinearLayout>
     <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="密码"
            android:gravity="center"
            android:background="@drawable/textview_yuan_left"
            android:paddingRight="28dp"
            android:paddingLeft="28dp"
            android:textSize="16dp"
            android:textColor="#000000"
            />
        <EditText 
            android:id="@+id/ed_login_mm"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_yuan_right"
            android:hint="请输入密码"
            android:layout_marginLeft="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:password="true"
            />
    </LinearLayout>
   <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         android:layout_marginTop="10dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请码"
            android:gravity="center"
            android:background="@drawable/textview_yuan_left"
            android:textSize="16dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#000000"
            />
        <EditText 
            android:id="@+id/ed_login_yqm"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_yuan_right"
            android:hint="请输入邀请码"
            android:layout_marginLeft="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp"
        >
        <TextView 
            android:id="@+id/tv_login_zhuce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:background="@drawable/textview_back_red"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="40dp"
            android:paddingLeft="40dp"
            />
         <TextView 
            android:id="@+id/tv_login_denglu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textColor="#FFFFFF"
            android:background="@drawable/text_biankuang"
            android:textSize="16dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="40dp"
            android:paddingLeft="40dp"
            android:layout_marginLeft="30dp"
            />
        
    </LinearLayout>

</LinearLayout>