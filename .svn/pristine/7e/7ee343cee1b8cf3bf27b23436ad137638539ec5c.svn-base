<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
     >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#555555"
    >
    <TextView 
        android:id="@+id/tv_ranking_alls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#000000"
        android:text="全部"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="16dp"
        />
    <TextView 
        android:id="@+id/tv_ranking_jianzou"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#FFFFFF"
        android:text="健走"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="16dp"
        />
    <TextView 
        android:id="@+id/tv_ranking_qixing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#FFFFFF"
        android:text="骑行"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="16dp"
        />
    
</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#999999"
    android:orientation="horizontal"
    >
     <TextView 
        android:id="@+id/tv_ranking_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:layout_weight="1"
        android:text="天"
        android:textColor="#000000"
        />
     <TextView 
        android:id="@+id/tv_ranking_week"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:layout_weight="1"
        android:text="周"
        android:textColor="#FFFFFF"
        />
     <TextView 
        android:id="@+id/tv_ranking_month"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:layout_weight="1"
        android:text="月"
        android:textColor="#FFFFFF"
        />
      <TextView 
        android:id="@+id/tv_ranking_quarter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:layout_weight="1"
        android:text="季度"
        android:textColor="#FFFFFF"
        />
      <TextView 
        android:id="@+id/tv_ranking_halfyear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:layout_weight="1"
        android:text="半年"
        android:textColor="#FFFFFF"
        />
      <TextView 
        android:id="@+id/tv_ranking_year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:layout_weight="1"
        android:text="年"
        android:textColor="#FFFFFF"
        />
</LinearLayout>
<ListView 
    android:id="@+id/lv_ranking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    ></ListView>

</LinearLayout>
