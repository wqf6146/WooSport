<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:gravity="center">
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:gravity="center"
            android:background="@drawable/textview_yuan_left"
            android:textSize="16dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#000000"
            />
        <EditText 
            android:id="@+id/ed_register_sjh"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_yuan_right"
            android:hint="请输入手机号"
            android:digits="1234567890."
            android:singleLine="true"
            android:layout_marginLeft="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            />
    </LinearLayout>
     <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="密码"
            android:gravity="center"
            android:background="@drawable/textview_yuan_left"
            android:paddingRight="28dp"
            android:paddingLeft="28dp"
            android:textSize="16dp"
            android:textColor="#000000"
            />
        <EditText 
            android:id="@+id/ed_register_mm"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_yuan_right"
            android:hint="请输入密码"
            android:layout_marginLeft="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:password="true"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="确认密码"
            android:gravity="center"
            android:background="@drawable/textview_yuan_left"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:textSize="16dp"
            android:textColor="#000000"
            />
        <EditText 
            android:id="@+id/ed_register_zcmm"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_yuan_right"
            android:hint="再次输入密码"
            android:layout_marginLeft="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:password="true"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:gravity="center"
            android:background="@drawable/textview_yuan_left"
            android:textSize="16dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#000000"
            />
        <EditText 
            android:id="@+id/ed_register_yzm"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_yuan_right"
            android:hint="请输入验证码"
            android:layout_marginLeft="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            />
        
    </LinearLayout>
    <com.white.countdownbutton.CountDownButton
        android:id="@+id/bt_yzm"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:textSize="16dp"
        android:paddingRight="5dp"
        android:background="@drawable/textview_back_red"
        android:text="获取验证码"
        app:countDownFormat="等待 (%ds)"
        app:countDown="60000"
        app:countDownInterval="1000"
        app:enableCountDown="true"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp"
        >
     <TextView 
            android:id="@+id/tv_register_wancheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:background="@drawable/textview_back_red"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="40dp"
            android:paddingLeft="40dp"
            />
         <TextView 
            android:id="@+id/tv_register_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textColor="#FFFFFF"
            android:background="@drawable/text_biankuang"
            android:textSize="16dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="40dp"
            android:paddingLeft="40dp"
            android:layout_marginLeft="30dp" />
    </LinearLayout>


    
    
</LinearLayout>
