<?xml version="1.0" encoding="utf-8"?>
<com.yhrjkf.woyundong.view.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/al_bg"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical">

     <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/biaoti"
            />
   <com.yhrjkf.woyundong.view.PercentLinearLayout
       android:layout_width="0dp"
       android:layout_height="0dp"
       app:layout_widthPercent="60%"
       app:layout_heightPercent="6%"
       android:orientation="horizontal"
       android:layout_marginTop="50dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="30%"
            app:layout_heightPercent="100%"
            android:text="手机号"
            android:gravity="center"
            android:background="@drawable/textview_yuan_left"
            android:textSize="16dp"
            android:textColor="@color/grayfont"
            />
        <EditText 
            android:id="@+id/ed_login_sjh"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="70%"
            app:layout_heightPercent="100%"
            android:background="@drawable/textview_yuan_right"
            android:hint="请输入手机号"
            android:textSize="14sp"
            android:digits="1234567890."
            android:singleLine="true"
            android:textColorHint="@color/grayfont"
            android:layout_marginLeft="5dp"
            android:paddingLeft="10dp"
            />
    </com.yhrjkf.woyundong.view.PercentLinearLayout>
     <com.yhrjkf.woyundong.view.PercentLinearLayout
         android:layout_width="0dp"
         android:layout_height="0dp"
         app:layout_widthPercent="60%"
         app:layout_heightPercent="6%"
         android:orientation="horizontal"
         android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="30%"
            app:layout_heightPercent="100%"
            android:text="密码"
            android:gravity="center"
            android:background="@drawable/textview_yuan_left"
            android:textSize="16dp"
            android:textColor="@color/grayfont"
            />
        <EditText 
            android:id="@+id/ed_login_mm"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="70%"
            app:layout_heightPercent="100%"
            android:background="@drawable/textview_yuan_right"
            android:hint="请输入密码"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            android:paddingLeft="10dp"
            android:textColorHint="@color/grayfont"
            android:password="true"
            />
    </com.yhrjkf.woyundong.view.PercentLinearLayout>
   <com.yhrjkf.woyundong.view.PercentLinearLayout
       android:layout_width="0dp"
       android:layout_height="0dp"
       app:layout_widthPercent="60%"
       app:layout_heightPercent="6%"
       android:orientation="horizontal"
       android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="30%"
            app:layout_heightPercent="100%"
            android:text="邀请码"
            android:gravity="center"
            android:background="@drawable/textview_yuan_left"
            android:textSize="16dp"
            android:textColor="@color/grayfont"
            />
        <EditText 
            android:id="@+id/ed_login_yqm"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="70%"
            app:layout_heightPercent="100%"
            android:background="@drawable/textview_yuan_right"
            android:hint="默认邀请码123456"
            android:textSize="14sp"
            android:textColorHint="@color/grayfont"
            android:paddingLeft="10dp"
            android:layout_marginLeft="5dp" />

    </com.yhrjkf.woyundong.view.PercentLinearLayout>
    <com.yhrjkf.woyundong.view.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="60%"
        app:layout_heightPercent="6%"
        android:visibility="gone"
        android:orientation="horizontal"
        android:gravity="center_vertical|right">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="默认邀请码为123456"
            android:textColor="@color/grayfont"
            android:gravity="right"
            android:textSize="14dp" />

    </com.yhrjkf.woyundong.view.PercentLinearLayout>
    <com.yhrjkf.woyundong.view.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="60%"
        app:layout_heightPercent="6%"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">
         <TextView
             android:id="@+id/tv_login_denglu"
             android:layout_width="0dp"
             android:layout_height="0dp"
             app:layout_widthPercent="100%"
             app:layout_heightPercent="100%"
             android:text="登录"
             android:textColor="#FFFFFF"
             android:gravity="center"
             android:background="@drawable/textview_back_red"
             android:textSize="18dp"
            />
        
    </com.yhrjkf.woyundong.view.PercentLinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_widthPercent="60%"
        app:layout_heightPercent="6%">

        <TextView
            android:id="@+id/al_tv_cantlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="无法登陆?"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/al_tv_zhuce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="新用户注册"
            android:textColor="#FFFFFF"
            android:textSize="16dp" />
    </RelativeLayout>

</com.yhrjkf.woyundong.view.PercentLinearLayout>