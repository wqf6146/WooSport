                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/img_personal_back5"
                    android:textColor="#D4D4D4" />
            </RelativeLayout>
            <View 
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#D4D4D4"
                android:layout_marginLeft="10dp"
                />
             <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:id="@+id/rl_my_tz"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                >
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="体重"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:textColor="#000000"
                    />
                <ImageView 
                    android:id="@+id/img_personal_back6"
                    android:layout_width="15dp"
                    android:layout_height="13dp"
                    android:background="@drawable/backright"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    />

                 <TextView
                     android:id="@+id/tv_my_tz"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_centerVertical="true"
                     android:layout_marginRight="5dp"
                     android:layout_toLeftOf="@+id/img_personal_back6"
                     android:textColor="#D4D4D4" />
            </RelativeLayout>
            <View 
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#D4D4D4"
                android:layout_marginLeft="10dp"
                />
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:id="@+id/rl_my_csny"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                >
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出生年月"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:textColor="#000000"
                    />
                <ImageView 
                    android:id="@+id/img_personal_back7"
                    android:layout_width="15dp"
                    android:layout_height="13dp"
                    android:background="@drawable/backright"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    />

                <TextView
                    android:id="@+id/tv_my_csny"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/img_personal_back7"
                    android:textColor="#D4D4D4" />
            </RelativeLayout>
            <View 
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#D4D4D4"
                android:layout_marginLeft="10dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:id="@+id/rl_my_bmi"
                android:paddingTop="15dp"
                android:layout_marginBottom="10dp"
                android:paddingBottom="15dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BMI值"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:textColor="#000000"
                    />

                <TextView
                    android:id="@+id/tv_my_bmi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:textColor="#D4D4D4" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:id="@+id/rl_my_qm"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                >
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="签名"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:textColor="#000000"
                    />
                <ImageView 
                    android:id="@+id/img_personal_back9"
                    android:layout_width="15dp"
                    android:layout_height="13dp"
                    android:background="@drawable/backright"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    />

                <TextView
                    android:id="@+id/tv_my_qm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/img_personal_back9"
                    android:textColor="#D4D4D4" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    

</com.yhrjkf.woyundong.view.PercentLinearLayout>
